## HTTP Backend Configuration
backends = http

## HTTP Authentication endpoint (your user-device-service on your PC)
auth_http_url = http://<IP>:8088/api/internal/mqtt/auth
auth_http_method = POST

## HTTP ACL endpoint (optional, keep commented for now)
# acl_http_url = http://<IP>:8088/api/internal/mqtt/acl
# acl_http_method = POST

## Cache settings (recommended for performance)
auth_opt_cache = true
auth_opt_cache_seconds = 300
auth_opt_cache_jitter = 10 # Adds randomness to cache expiration

## Log level (optional: debug, info, warn, error)
# log_level = debug