# mosquitto-debian/Dockerfile
FROM debian:stable-slim

# Install Mosquitto and client tools from Debian repositories
RUN apt-get update && apt-get install -y --no-install-recommends \
    mosquitto \
    mosquitto-clients \
 && rm -rf /var/lib/apt/lists/*

# Create directories for config, data, log
RUN mkdir -p /mosquitto/config /mosquitto/data /mosquitto/log \
 && chown -R mosquitto:mosquitto /mosquitto

# Copy your pre-downloaded plugin into the image
COPY go-auth.so /usr/lib/go-auth.so

# Expose MQTT ports
EXPOSE 1883
EXPOSE 8883

# Set the user and entrypoint
USER mosquitto
ENTRYPOINT ["/usr/sbin/mosquitto", "-c", "/mosquitto/config/mosquitto.conf"]